     <!-- Request页面的Dialog -->
    <style name="MyDialog"  parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item> 
    </style>
     
     
    
    <style name="weibo_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/weibolist_bottombar_itembg_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
    </style>

    <style name="fragment_tab">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
      <!--   <item name="android:background">@drawable/weibolist_bottombar_itembg_selector</item> -->
        <item name="android:button">@null</item>
    </style>

    
    <style name="rl_about_us">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    
    
    <style name="line_about_us">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/gray</item>
    </style>
    
    
    <style name="tv_about_us">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
       <item name="android:textSize">15sp</item>
       <item name="android:textColor">@color/black</item>    
     
    </style>
    
    
   
    
    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">  
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>  
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>  
    </style> 

    <!--Main bottom-->
    <style name="HomeTab">
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <declare-styleable name="Switch_Style">
        <!-- Default style for the Switch widget. -->
        <attr name="sb_switchStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <!-- Drawable to use as the "thumb" that switches back and forth. -->
        <attr name="sb_thumb" format="reference" />
        <!-- Drawable to use as the "track" that the switch thumb slides within. -->
        <attr name="sb_track" format="reference" />
        <!-- Text to use when the switch is in the checked/"on" state. -->
        <attr name="sb_textOn" format="string" />
        <!-- Text to use when the switch is in the unchecked/"off" state. -->
        <attr name="sb_textOff" format="string" />
        <!-- Amount of padding on either side of text within the switch thumb. -->
        <attr name="sb_thumbTextPadding" format="dimension" />
        <!-- TextAppearance style for text displayed on the switch thumb. -->
        <attr name="sb_switchTextAppearance" format="reference" />
        <!-- Minimum width for the switch component -->
        <attr name="sb_switchMinWidth" format="dimension" />
        <!-- Minimum space between the switch and caption text -->
        <attr name="sb_switchPadding" format="dimension" />
    </declare-styleable>
    <style name="Switch">
        <item name="sb_track">@drawable/switch_btn</item>
        <item name="sb_thumb">@drawable/switch_btn_slipper</item>
        <item name="sb_textOn">@string/switch_on</item>
        <item name="sb_textOff">@string/switch_off</item>
        <item name="sb_thumbTextPadding">15dip</item>
        <item name="sb_switchMinWidth">60dip</item>
        <item name="sb_switchPadding">10dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <string name="switch_on"> </string>
    <string name="switch_off"> </string>
</resources>