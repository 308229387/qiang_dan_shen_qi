<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FBFB"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_backhead" />

    <com.huangyezhaobiao.view.TitleMessageBarLayout
        android:id="@+id/tbl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_bind_mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目前绑定手机"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />

            <EditText
                android:id="@+id/now_bind_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="123456"
                android:editable="false"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@color/grays"
                android:textSize="@dimen/textsize_normal"/>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#e4e4e4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_getCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/white"
            android:text="@string/get_code"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:background="@color/whitedark"
            android:layout_toLeftOf="@id/btn_getCode"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_validate_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证手机号码"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />

            <EditText
                android:id="@+id/now_validate_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="请输入验证码"
                android:background="@null"
                android:inputType="number"
                android:textSize="@dimen/textsize_normal"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#e4e4e4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定新手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />

            <EditText
                android:id="@+id/new_validate_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="number"
                android:textSize="@dimen/textsize_normal"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#e4e4e4" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/submit_btn_bgs"
        android:text="@string/submit"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/mobile_notice"
        android:textSize="28px"
        android:textColor="#ababab"/>
</LinearLayout>