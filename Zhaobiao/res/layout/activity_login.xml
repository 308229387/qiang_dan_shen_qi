<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ll_root"
    android:background="@drawable/t_login_backgrand"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="97dp"
        android:src="@drawable/launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="抢单神器"
        android:textColor="@color/white"
        android:textSize="22sp" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_username"
            android:layout_marginLeft="15dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="fill_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <ImageButton
            android:id="@+id/nCloseBtn"
            android:layout_width="23dp"
            android:layout_alignParentRight="true"
            android:layout_height="23dp"
            android:background="@drawable/t_login_delete"
            android:visibility="invisible"
            android:layout_marginTop="23dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_password"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="fill_parent"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <ImageButton
            android:id="@+id/pCloseBtn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/t_login_delete"
            android:layout_marginTop="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:visibility="invisible" />
    </RelativeLayout>


    <Button
        android:id="@+id/loginbutton"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dip"
        android:background="@drawable/t_whitebuttonselector"
        android:gravity="center"
        android:tag="登录"
        android:text="登录"
        android:textColor="@color/tab_red"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        >
        <CheckBox
            android:id="@+id/cb_usage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:checked="true"
            android:gravity="center"
            android:button="@null"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_usage_bg"
            />
        <TextView
            android:id="@+id/tv_accept_text_usages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cb_usage"
            android:layout_alignBaseline="@id/cb_usage"
            android:text="接受"
            android:textColor="#e9e9e9"
            />
        <TextView
            android:id="@+id/tv_accept_text_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_accept_text_usages"
            android:layout_alignBaseline="@id/cb_usage"
            android:text="@string/native_login_softwareusage"
            android:textColor="#ffffff"

            />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_login_raiders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/native_login_raiders"
            android:textColor="#ad2f3c" />
    </LinearLayout>

</LinearLayout>