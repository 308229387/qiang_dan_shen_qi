<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:paddingTop="8dip"
    android:paddingBottom="8dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/account_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/iv_account_delete"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dip"
            android:text="xxxxxx"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/account_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="88dip"
            android:text="12323456789"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/account_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dip"
        android:src="@drawable/iv_account_edit"
        android:visibility="gone"/>



</RelativeLayout>
