<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_no_bid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/tv_io"
        android:layout_width="146dip"
        android:layout_height="155dip"
        android:src="@drawable/grabresult_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"/>

    <TextView
        android:id="@+id/tv_ios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_io"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="5dp"
        android:layout_margin="20dp"
        android:text="暂无订单,请继续关注,\n新订单随时出现哦！"
        android:textColor="@color/t_gray"
        android:textSize="17sp" />
</RelativeLayout>