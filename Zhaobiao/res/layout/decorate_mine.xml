<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="120dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="装修"
        android:layout_marginTop="5dp"
        android:textColor="#808080"
        />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_grab_budget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预算:"
                    android:textColor="#808080"
                    />
                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_toRightOf="@id/tv_grab_budget_title"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_grab_location_title"
                    android:layout_width="wrap_content"
                    android:textColor="#808080"
                    android:layout_height="wrap_content"
                    android:text="区域:"
                    />
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_toRightOf="@id/tv_grab_location_title"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_grab_area_title"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面积:"
                    />
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_toRightOf="@id/tv_grab_area_title"
                    android:layout_marginLeft="2dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="#808080"
                    android:id="@+id/tv_grab_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装修类型:"
                    />
                <TextView
                    android:id="@+id/tv_mode"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/tv_grab_type_title"
                    android:layout_marginLeft="2dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
</LinearLayout>