<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_project"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tv_location_title"
            android:text="区域:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_location_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tv_location_time"
            android:text="注册时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_location_time_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_location_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tv_location_delegate_title"
            android:text="代理记账:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_location_delegate_content"
            android:layout_toRightOf="@id/tv_location_delegate_title"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tv_location_delegate_add_title"
            android:text="代理地址:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:id="@+id/tv_location_delegate_add_content"
            android:layout_toRightOf="@id/tv_location_delegate_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:src="@drawable/title_iv_right_new"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
           />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tv_location_business_title"
            android:text="经营业务:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:id="@+id/tv_location_business_content"
            android:text="未填写"
            android:layout_toRightOf="@id/tv_location_business_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tv_domestic_customer_name"
            android:text="客户姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:id="@+id/tv_domestic_customer_name_content"
            android:text="未填写"
            android:layout_toRightOf="@id/tv_domestic_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>