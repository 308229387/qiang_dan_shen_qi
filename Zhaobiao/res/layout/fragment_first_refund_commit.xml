<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:orientation="vertical"
    android:background="#e9e9e9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="订单ID"
            android:id="@+id/tv_order_id"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_order_id"
            android:layout_marginLeft="15dp"
            android:textColor="@color/t_gray"
            android:text="1111"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dfdfdf"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dfdfdf"
            />
        <TextView
            android:id="@+id/tv_refund_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="退单原因"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />

        <GridView
            android:id="@+id/gridView_quit_reason"
            android:layout_below="@id/tv_refund_reason"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="12dp"
            android:layout_height="140dp"
            android:minHeight="140dp"
            android:numColumns="2"
            android:horizontalSpacing="20dp"
            android:verticalSpacing="20dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dfdfdf"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="详细描述"
                android:textColor="#808080"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#dfdfdf"
                    />

                <EditText
                    android:id="@+id/et_refund_desc"
                    android:layout_marginLeft="15dp"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="4dp"
                    android:maxLength="300"
                    android:textSize="14sp"
                    android:hint="@string/refund_desc_hint"
                    android:background="@color/white"
                    android:textColorHint="#a6a6a6"
                    android:layout_height="wrap_content"
                    />
                <com.huangyezhaobiao.view.HorizontialListView
                    android:id="@+id/hlv_photo_container"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_below="@id/et_refund_desc"
                    android:layout_marginBottom="11dp"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#dfdfdf"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/tv_hint_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/hlv_photo_container"
                    android:layout_marginRight="6dp"
                    android:textSize="14sp"
                    android:text="300"
                    android:textColor="@color/t_gray"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/tv_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您可以上传证据图片"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bubble"
                    />
                </RelativeLayout>
            <Button
                android:id="@+id/btn_refund_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/t_redbuttonselector"
                android:text="提交"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <include
        android:id="@+id/select_view"
        layout="@layout/item_select_pic"
        android:visibility ="gone"

        />
    <include
        layout="@layout/no_internet_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/layout_no_internet"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:visibility="gone"
        android:id="@+id/rl_submit"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="上传...."
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        </RelativeLayout>
</RelativeLayout>