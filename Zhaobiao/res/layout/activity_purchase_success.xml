<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <include layout="@layout/layout_backhead"
        android:id="@+id/layout_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="77dip"
            android:src="@drawable/t_orderdetail_success"/>

        <TextView
            android:id="@+id/success_business_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/success_business_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dip"
            android:orientation="vertical">

            <Button
                android:id="@+id/success_list"
                android:layout_width="fill_parent"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/t_redbuttonselector"
                android:text="查看订单"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/success_businesslist"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dip"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/t_whitebuttonselector"
                android:text="继续购买"
                android:textColor="@color/button_red"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/business_success_tag"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/t_gray"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>