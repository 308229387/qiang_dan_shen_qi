<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FBFB"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_backhead" />

    <!-- <include layout="@layout/layout_order_hint" /> -->

    <com.huangyezhaobiao.view.TitleMessageBarLayout
        android:id="@+id/tbl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/layout_head" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/mywallet" />


    <RelativeLayout
        android:id="@+id/rl_charge"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/tbl"
        android:layout_marginTop="20dip"
        android:background="@drawable/menu_item_background">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="消费记录"
            android:textSize="@dimen/textsize_large"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/title_iv_right_new" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>


</RelativeLayout>