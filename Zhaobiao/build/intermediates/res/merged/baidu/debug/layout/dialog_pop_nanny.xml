<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="22dp">

        <TextView
            android:id="@+id/nanny_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保姆月嫂"
            android:textColor="@color/black"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/pop_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="15"
            android:textColor="#A6A6A6"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s后自动关闭"
            android:textColor="#A6A6A6"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求类型"
                android:textColor="@color/detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/nanny_need_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在区域"
                android:textColor="@color/detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/nanny_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雇佣时间"
                android:textColor="@color/detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/nanny_hire_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄要求"
                android:textColor="@color/detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/nanny_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经验年限"
                android:textColor="@color/detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/nanny_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textColor="@color/detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/nanny_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

</LinearLayout>