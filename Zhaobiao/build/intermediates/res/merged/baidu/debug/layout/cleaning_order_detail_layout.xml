<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qiangdan_bg_item"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_service_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务类型"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_service_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_service_type_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_size_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清洁面积"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_size_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_size_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_service_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务区域"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_service_location_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_service_location_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_service_detail_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_service_detail_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_service_detail_address_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_service_detail_age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄要求"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_service_detail_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_service_detail_age_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_service_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_service_time_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_cleaning_tools_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洁具用品"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_cleaning_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_cleaning_tools_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_bid_detail_budget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预        算"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_bid_detail_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_bid_detail_budget_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cleaning_order_detail_special_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特殊需求"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/cleaning_order_detail_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/cleaning_order_detail_special_title"
            android:textColor="@color/order_detail_text"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>


</LinearLayout>


