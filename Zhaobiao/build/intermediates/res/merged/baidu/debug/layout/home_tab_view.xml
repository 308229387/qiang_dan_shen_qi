<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_tab_item_bg">

    <LinearLayout
        android:id="@+id/ll_tab_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/iv_tab_icon"
            style="@style/HomeTab"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip" />

        <TextView
            android:id="@+id/tv_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/home_tab_text_normal_color"
            android:textSize="@dimen/common_text_size_9" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_new_tag"
        android:layout_width="wrap_content"
        android:layout_height="15dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/common_text_size_9"
        android:textColor="@color/white"
        android:layout_marginLeft="-7.5dp"
        android:layout_toRightOf="@id/ll_tab_content"
        android:background="@drawable/red_dot_new_tag"
        android:visibility="gone"/>
</RelativeLayout>
