<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <include layout="@layout/layout_backhead"
        android:id="@+id/layout_head"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/whitedark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/validate_mobile"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:numeric="integer"
                android:textColorHint="@color/whitedark"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/whitedark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/validate_code"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:maxLength="6"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:textColorHint="@color/whitedark"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:background="@color/whitedark" />

            <Button
                android:id="@+id/validate_getcode"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:textSize="12sp"
                android:text="获取验证码"
                android:textColor="@color/red" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/whitedark" />

        <Button
            android:id="@+id/commit"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/t_redbuttonselector"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/mobile_notice"
            android:textSize="28px"
            android:textColor="#ababab"/>
    </LinearLayout>



</LinearLayout>