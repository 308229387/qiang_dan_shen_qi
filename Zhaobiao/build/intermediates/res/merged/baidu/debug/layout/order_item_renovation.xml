<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:contentPaddingLeft="-2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/renovation_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grap_list_selector"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/grab_style"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/type_back_grabbed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">

                <ImageView
                    android:id="@+id/iv_renovation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11dip"
                    android:src="@drawable/iv_renovation_brush_knock" />

                <TextView
                    android:id="@+id/grab_renovation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_renovation_type"
                    android:layout_centerVertical="true"
                    android:text="局部装修-二手房"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_xlarge" />

                <TextView
                    android:id="@+id/grab_renovation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:text="10:28"
                    android:textColor="@color/t_gray"
                    android:textSize="@dimen/textsize_small" />
            </RelativeLayout>

            <include
                android:id="@+id/view_root"
                layout="@layout/decorate_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>

            <include
                android:id="@+id/view_bottom"
                layout="@layout/bottom_main_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="16dp" />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
