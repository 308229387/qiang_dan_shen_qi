<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="90dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_grab_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="装修区域"
            android:textColor="@color/binding_detail_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_grab_location_title"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:text="朝阳区-望京"
            android:textColor="@color/binding_detail_text"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_decorate_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="详细地址"
            android:textColor="@color/binding_detail_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_decorate_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/tv_decorate_address"
            android:singleLine="true"
            android:text="酒仙桥"
            android:textColor="@color/binding_detail_text"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/iv_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/binding_detail_text"
            android:text="客户姓名"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_customer_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/tv_customer_name"
            android:text="王先生"
            android:textColor="@color/binding_detail_text"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>