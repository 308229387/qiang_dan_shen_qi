<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:padding="3dp"
        android:text="2014-4-15"
        android:textColor="@color/t_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_ll_item" >

        <RelativeLayout
            android:id="@+id/rl_qd_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_qd_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="sss"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_noouejd"
                android:layout_below="@id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="订单编号"
                android:textColor="@color/light_text_color"
                />

            <TextView
                android:id="@+id/tv_bg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_qd_result"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="订单信息"
                android:textColor="@color/light_text_color"
                 />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_bg_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="订单价格"
                android:textColor="@color/light_text_color" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_qd_result"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/view" >

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:text="查看订单"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/iv_arrow" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>