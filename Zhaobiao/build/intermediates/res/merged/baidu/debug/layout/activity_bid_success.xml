<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <include layout="@layout/layout_backhead"
        android:id="@+id/layout_head"
        />

    <com.huangyezhaobiao.view.TitleMessageBarLayout
        android:id="@+id/tbl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="77dp"
            android:src="@drawable/t_orderdetail_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="恭喜您,抢单成功！"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="快去查看订单信息,马上联系客户"
            android:textColor="@color/t_gray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="越早联系，抢得先机，成单的概率会更高哦~"
            android:textColor="@color/t_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/success_orderlist"
                android:layout_width="fill_parent"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/t_redbuttonselector"
                android:text="查看订单"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/success_bidlist"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dip"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/t_whitebuttonselector"
                android:text="继续抢单"
                android:textColor="@color/button_red"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>