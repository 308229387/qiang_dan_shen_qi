<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/individer"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/individer">
        <TextView
            android:id="@+id/tv_main_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e12f37"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_xlarge"
            android:text="￥39.00"/>

        <TextView
            android:id="@+id/tv_main_origin_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_main_fee"
            android:textColor="#808080"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_normal"
            android:layout_toRightOf="@id/tv_main_fee"
            android:text="399.00"/>

        <Button
            android:id="@+id/grab_main_knock"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="抢单"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:background="@drawable/bt_knock_button_selector"
            />
    </RelativeLayout>


</RelativeLayout>