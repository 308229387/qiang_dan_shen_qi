<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2" />

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar_view" />

    <RelativeLayout
        android:id="@+id/rl_single_bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_dark">

        <RelativeLayout
            android:id="@+id/rl_single_photo_check"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_single_photo_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/auth_follow_cb_unc" />

            <TextView
                android:id="@+id/tv_single_photo_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选中"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>