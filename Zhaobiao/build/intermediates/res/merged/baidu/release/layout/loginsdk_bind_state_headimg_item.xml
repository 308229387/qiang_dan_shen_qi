<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:background="@drawable/loginsdk_personal_list_selector">

    <TextView
        android:id="@+id/userinfo_title"
        android:layout_height="wrap_content"
        android:layout_width="70dip"
        android:layout_marginLeft="15dip"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_centerVertical="true"/>

    <!--头像,只在头像item中才显示-->
    <com.wuba.loginsdk.fragment.personal.CircleImageView
        android:id="@+id/userinfo_headimg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/userinfo_title"
        app:border_color="@color/white"/>

    <com.wuba.loginsdk.views.base.RecycleImageView
        android:id="@+id/userInfo_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:layout_centerVertical="true"
        android:src="@drawable/loginsdk_home_selfplat_more_arrow"/>

    <View
        android:id="@+id/userInfo_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#dedfe0"
        android:layout_marginLeft="15dip"
        android:layout_alignParentBottom="true"/>
</RelativeLayout><!-- From: file:/I:/E/2016523/58sdklogin/WubaLoginSDK/loginsdk/src/main/res/layout/loginsdk_bind_state_headimg_item.xml -->