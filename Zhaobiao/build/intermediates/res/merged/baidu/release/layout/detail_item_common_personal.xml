<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardElevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="基本信息"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册类型"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/detail_item_common_personal_text_reg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册区域"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/detail_item_common_personal_text_reg_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册时间"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/detail_item_common_personal_text_reg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经营业务"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/detail_item_common_personal_text_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text="未填写"
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>


</LinearLayout>
