<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/passport_safeguard_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_main_bg" >
    <include
        android:id="@+id/passport_title_layout"
        layout="@layout/loginsdk_public_title" />
    <LinearLayout
        android:id="@+id/passport_line_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff5d7"
        android:paddingLeft="15dp"
        android:layout_below="@id/passport_title_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/passport_tip_icon"
            android:layout_width="18dip"
            android:layout_height="19dip"
            android:src="@drawable/loginsdk_passport_tip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#ff2e2e"
            android:text="您的账户存在安全风险，请重置密码"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/passport_line_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:layout_below="@id/passport_line_one"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:textColor="#555555"
            android:text="设置新密码"/>
        <com.wuba.loginsdk.views.LoginAutoClearEditView
            android:id="@+id/reset_passport_password"
            style="@style/RegisterEdit"
            android:hint="请输入新密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"/>
    </LinearLayout>
    <View
        android:id="@+id/separator_one"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_below="@id/passport_line_two"
        android:layout_marginLeft="@dimen/login_text_margin_border_dimen"/>
    <LinearLayout
        android:id="@+id/passport_line_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@id/separator_one"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:textColor="#555555"
            android:text="确认新密码"/>
        <com.wuba.loginsdk.views.LoginAutoClearEditView
            android:id="@+id/resure_passport_password"
            style="@style/RegisterEdit"
            android:hint="请确认新密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"/>
    </LinearLayout>
    <View
        android:id="@+id/separator_two"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_below="@id/passport_line_three"
        android:layout_marginLeft="@dimen/login_text_margin_border_dimen"/>
    <RelativeLayout
        android:id="@+id/passport_line_four"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@id/separator_two"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/passport_input_telephone"
            android:layout_width="100dip"
            android:layout_height="44dip"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="#555555"
            android:text="手机号"/>
        <Button
            android:id="@+id/passport_get_affirm_button"
            android:layout_width="@dimen/dynamic_login_account_width"
            android:layout_height="@dimen/manager_account_row_height"
            android:singleLine="false"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="@string/login_phone_get_verify_num"
            android:textColor="@color/dynamic_unlog_verify_color"
            android:textSize="@dimen/template_frame_item_secondtextsize"/>
        <com.wuba.loginsdk.views.LoginAutoClearEditView
            android:id="@+id/passport_telephone"
            style="@style/RegisterEdit"
            android:inputType="phone"
            android:layout_toLeftOf="@id/passport_get_affirm_button"
            android:layout_toRightOf="@id/passport_input_telephone"
            android:digits="1234567890"
            android:hint="@string/login_phone_num_input"
            android:maxLength="11"/>
        <TextView
            android:id="@+id/verified_divider"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@id/passport_input_telephone"
            android:layout_alignTop="@id/passport_input_telephone"
            android:layout_toRightOf="@id/passport_telephone"
            android:visibility="visible"
            android:background="#F3F3F3" />
        <TextView
            android:id="@+id/phone_hasbind_hint"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/passport_input_telephone"
            android:layout_toRightOf="@id/passport_input_telephone"
            android:visibility="gone"/>

    </RelativeLayout>
    <View
        android:id="@+id/separator_three"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_below="@id/passport_line_four"
        android:layout_marginLeft="@dimen/login_text_margin_border_dimen"/>
    <LinearLayout
        android:id="@+id/passport_line_five"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/separator_three"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:textColor="#555555"
            android:text="验证码"/>
        <com.wuba.loginsdk.views.LoginAutoClearEditView
            android:id="@+id/resure_passport_vericode"
            style="@style/RegisterEdit"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:digits="1234567890"
            android:maxLength="6"/>

    </LinearLayout>
    <Button
        android:id="@+id/passport_login_button"
        style="@style/LoginRegButtonStyle"
        android:layout_width="fill_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:layout_below="@id/passport_line_five"
        android:background="@drawable/loginsdk_wb_unlogin_btn_xml"
        android:text="@string/login_text"
        android:textColor="#a0ffffff" />
    <com.wuba.loginsdk.views.base.RequestLoadingView
        android:id="@+id/passport_request_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
</RelativeLayout><!-- From: file:/I:/E/2016523/58sdklogin/WubaLoginSDK/loginsdk/src/main/res/layout/loginsdk_account_login_passport_safeguard.xml -->