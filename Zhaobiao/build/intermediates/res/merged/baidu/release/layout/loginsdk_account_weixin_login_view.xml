<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/login_title_layout"
        layout="@layout/loginsdk_public_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginBottom="106dip"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/qq_login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="57dip"
                    android:gravity="center"
                    android:background="@drawable/loginsdk_qq_login_btn_bg">


                    <com.wuba.loginsdk.views.base.RecycleImageView
                        android:id="@+id/qq_login_btn_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/loginsdk_qq_login_btn_img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/qq_login_btn_img"
                        android:gravity="center"
                        android:paddingLeft="9dip"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:text="QQ登录"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/login_qq_zhanghao_space">

                    <LinearLayout
                        android:id="@+id/wx_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#666b72"
                            android:text="微信登录>"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="14dip"
                        android:background="#dee0e2"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:id="@+id/corp_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#666b72"
                            android:text="58账号登录>"/>


                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="14dip"
                        android:background="#dee0e2"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:id="@+id/sina_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#666b72"
                            android:text="微博登录>"
                            />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
</LinearLayout><!-- From: file:/I:/E/2016523/58sdklogin/WubaLoginSDK/loginsdk/src/main/res/layout/loginsdk_account_weixin_login_view.xml -->