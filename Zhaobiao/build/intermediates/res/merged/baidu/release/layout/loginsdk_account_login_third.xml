<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginsdk_login_background">

    <include
        android:id="@+id/login_title_layout"
        layout="@layout/loginsdk_public_title" />

    <LinearLayout
        android:id="@+id/login_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/wx_login_btn"
            android:layout_width="match_parent"
            android:layout_height="50.7dip"
            android:gravity="center"
            android:layout_marginTop="50dip"
            android:background="@drawable/loginsdk_wx_login_btn_bg">

            <com.wuba.loginsdk.views.base.RecycleImageView
                android:id="@+id/wx_login_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loginsdk_wx_login_btn_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/wx_login_btn_img"
                android:gravity="center"
                android:paddingLeft="9dip"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="微信登录"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qq_login_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="17dip"
            android:layout_height="50.7dip"
            android:gravity="center"
            android:background="@drawable/loginsdk_qq_login_btn_bg">


            <com.wuba.loginsdk.views.base.RecycleImageView
                android:id="@+id/qq_login_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loginsdk_qq_login_btn_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/qq_login_btn_img"
                android:gravity="center"
                android:paddingLeft="9dip"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="QQ登录"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
