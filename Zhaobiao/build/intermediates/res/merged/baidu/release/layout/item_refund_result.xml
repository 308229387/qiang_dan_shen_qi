<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:id="@+id/tv_refund_result"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="处理结果"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_refund_result_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_refund_result"
            android:textSize="15sp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#efefef"
            android:layout_alignParentBottom="true"
            />

        </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/background"
        >
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退单信息"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#efefef"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单ID      "
            android:textColor="#808080"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_id_content"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_order_id"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/tv_refund_reason"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退单原因  "
            android:textColor="#808080"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_refund_reason_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_refund_reason"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/tv_refund_desc"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="详细描述  "
            android:textColor="#808080"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_refund_desc_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_refund_desc"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/background">
        <TextView
            android:id="@+id/tv_refund_evidence"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:textColor="#808080"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="上传证据  "
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_refund_evidence_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_refund_evidence"
            android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:background="@color/background">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_evidence"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/background"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_refund_addevidence"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:textColor="#808080"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="补交证据  "
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_refund_addevidence_content"
            android:text="哈哈"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_refund_addevidence"
            android:textSize="15sp"/>

    </RelativeLayout>
</LinearLayout>