<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qiangdan_bg_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tv_last_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="抢单费用"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/tv_last_cost_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/tv_last_cost"
            android:text="￥39.00"
            android:textColor="#FF2F37"
            android:textSize="21sp"

            />

        <TextView
            android:id="@+id/tv_original_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_last_cost_content"
            android:text="399.00"
            android:textColor="#808080"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_tuidan"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退单申请"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/tv_array"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="去申请"
            android:textColor="@color/light_text_color"
            android:background="@drawable/drawable_reason_entity_uncheck"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />
</LinearLayout>
