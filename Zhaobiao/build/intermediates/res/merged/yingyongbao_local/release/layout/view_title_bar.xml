<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#ececec"
    android:id="@+id/title_root"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_title_left_new_order"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/title_left_new_order"
     
        />
	<ImageView
	    android:id="@+id/iv_title_left_yue"
	    android:layout_width="19dp"
	    android:layout_height="17dp"
	     android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/title_iv_left_yue"
	    />
    <ImageView
        android:id="@+id/iv_title_right_new_array"
        android:layout_width="8dp"
        android:layout_height="14.5dp"
        android:src="@drawable/title_iv_right_new"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:id="@+id/rl_right_title_close"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_title_left_new_order"
        android:layout_marginLeft="2dp"
        android:singleLine="true"
        android:layout_toLeftOf="@id/iv_title_right_new_array"
        android:layout_marginRight="5dp"
        android:textColor="#f76249"
        android:textSize="15sp"
        android:text="您的余额已不足以支付下次抢单，请及时充值!"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
