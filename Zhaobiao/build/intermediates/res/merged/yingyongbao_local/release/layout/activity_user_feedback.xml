<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_backhead"
        android:id="@+id/layout_head"
        />

   <!--  <include layout="@layout/layout_order_hint" /> -->
	<com.huangyezhaobiao.view.TitleMessageBarLayout
	       android:id="@+id/tbl"
	       android:layout_width="fill_parent"
	       android:layout_height="45dp"
       />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="255dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp" >

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp" >

                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/bg_et"
                    android:gravity="top"
                    android:hint="如您在使用过程中遇到问题，请留下您的联系方式,我们会及时与您联系"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" />
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/sv"
            android:background="@color/black" />

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@id/line"
            android:background="@drawable/bg_et"
            android:gravity="center_vertical"
            android:hint="留下您的qq或电话"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="提交"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            >
           <TextView
               android:id="@+id/tv_kefu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="或直接拨打客服电话"
               android:textColor="@color/gray"
               android:layout_centerHorizontal="true"
               /> 
           <ImageView
               android:id="@+id/iv_q"
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:src="@drawable/radar"
               android:layout_marginTop="5dp"
               android:layout_below="@id/tv_kefu"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_height="wrap_content"
               android:text="客服统一工作时间"
               android:textColor="@color/gray"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/iv_q"
               /> 
        </RelativeLayout>
     </RelativeLayout>
</LinearLayout>