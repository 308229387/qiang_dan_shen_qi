<?xml version="1.0" encoding="utf-8"?><!-- 装修 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_grab_budget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="预算 8-10万"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_grab_area_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grab_budget_title"
            android:layout_marginTop="7dip"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="面积: 90-144平米"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_grab_distance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grab_area_title"
            android:layout_marginTop="7dip"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/binding_list_text"
            android:textSize="15sp"
            android:visibility="gone"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_grab_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="区域  朝阳区-望京"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_grab_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:layout_below="@id/tv_grab_location_title"
            android:layout_marginTop="7dip"
            android:singleLine="true"
            android:text="方式: 全包"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>