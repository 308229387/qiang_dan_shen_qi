<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_cleaning_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="15dip"
            android:text="清洁面积:"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_cleaning_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cleaning_size"
            android:layout_marginTop="7dip"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="服务区域:"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp"  />

        <TextView
            android:id="@+id/tv_cleaning_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cleaning_location"
            android:layout_marginTop="7dip"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="服务时间:"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>