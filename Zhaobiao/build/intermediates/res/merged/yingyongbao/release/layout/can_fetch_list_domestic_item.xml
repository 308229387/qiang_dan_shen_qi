<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="50dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        >
    <TextView
        android:id="@+id/tv_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginRight="15dip"
        android:text="注册区域:"
        android:textColor="@color/binding_list_text"
        android:textSize="15sp"  />

        <TextView
            android:id="@+id/tv_business_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location_title"
            android:layout_marginTop="7dip"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="经营业务:"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_delegate_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="15dip"
            android:text="代理记账:"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_delegate_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_delegate_budget"
            android:layout_marginTop="7dip"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="代理地址:"
            android:textColor="@color/binding_list_text"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>