<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grap_list_selector"
    app:cardElevation="2dp"

    >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minHeight="100dp"
        android:orientation="vertical">

        <!-- 必须有的一块 -->

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">

                <TextView
                    android:id="@+id/tv_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="家庭装修"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tv_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:text="16-06-20  11:30"
                    android:textColor="@color/timeline_color"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include
                android:id="@+id/decorate"
                layout="@layout/decorate_mine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"/>

            <LinearLayout
                android:id="@+id/ll_decorate_order_state"
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@color/divider">

                <ImageView
                    android:id="@+id/iv_decorate_orderstate_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_decotrate_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dip"
                android:text="待服务"
                android:textColor="@color/order_state_default"/>


    </LinearLayout>
</android.support.v7.widget.CardView>