<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/common_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/refund_time_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/refund_time_close"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <ImageView
        android:layout_width="146dp"
        android:layout_height="155dp"
        android:layout_above="@id/refund_time_title1"
        android:layout_marginTop="80dip"
        android:layout_marginBottom="34dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/refund_blank_hint"
        />
    <TextView
        android:id="@+id/refund_time_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/refund_time_title1"
        android:layout_centerInParent="true"
        android:text="@string/refund_time_title1"
        android:layout_marginTop="26dp"
        android:textColor="@color/t_gray"
        android:textSize="17sp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/refund_time_title2"
        android:layout_marginTop="11dp"
        >
        <TextView
            android:id="@+id/tv_refund_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/t_gray"
            android:textSize="17sp"
            android:text="2015-4-22"
            />
        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_alignBaseline="@id/tv_refund_startTime"
            android:layout_toRightOf="@id/tv_refund_startTime"
            android:layout_height="wrap_content"
            android:textColor="@color/t_gray"
            android:textSize="17sp"
            android:text="è‡³"
            />
        <TextView
            android:id="@+id/tv_refund_endTime"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/to"
            android:layout_height="wrap_content"
            android:textColor="@color/t_gray"
            android:textSize="17sp"
            android:text="2015-4-22"
            />

        </RelativeLayout>
    <include
        layout="@layout/no_internet_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/layout_no_internet"
        />
</RelativeLayout>