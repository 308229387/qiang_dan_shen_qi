<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_no_bid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/tv_io"
        android:layout_width="117dip"
        android:layout_height="117dip"
        android:src="@drawable/grabresult_hint"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_ios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_io"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="暂无订单,请继续关注,\n新订单随时出现哦！"
        android:textColor="@color/t_gray"
        android:textSize="@dimen/textsize_large" />
</RelativeLayout>