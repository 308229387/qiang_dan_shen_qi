<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_no_orders"
        android:layout_width="146dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:src="@drawable/order_hint" />

    <TextView
        android:id="@+id/tv_no_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_no_orders"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="暂无已抢到的订单,"
        android:textColor="#808080"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/ty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_orders"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="去抢单页等等新订单吧！"
        android:textColor="#808080"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/layout_no_internet_click_refresh"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@id/ty"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_qd_bg"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看可抢订单"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>