<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="25dp"
    android:orientation="vertical"
    app:cardElevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="基本信息"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务类型"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/cleaning_bid_detail_service_type_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清洁面积"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large"  />

            <TextView
                android:id="@+id/cleaning_bid_detail_size_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在区域"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large"  />

            <TextView
                android:id="@+id/cleaning_bid_detail_service_location_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务时间"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large"  />

            <TextView
                android:id="@+id/cleaning_bid_detail_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄要求"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large"  />

            <TextView
                android:id="@+id/cleaning_bid_detail_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洁具用品"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large"  />

            <TextView
                android:id="@+id/cleaning_bid_detail_cleaning_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预        算"
                android:textColor="@color/binding_detail_text"
                android:textSize="@dimen/textsize_large"  />

            <TextView
                android:id="@+id/cleaning_bid_detail_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text=""
                android:textColor="@color/order_detail_text"
                android:textSize="@dimen/textsize_large"  />
        </LinearLayout>
</LinearLayout>
