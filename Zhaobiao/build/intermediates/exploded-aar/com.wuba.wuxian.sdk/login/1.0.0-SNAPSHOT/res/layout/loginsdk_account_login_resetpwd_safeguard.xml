<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/passport_resetpwd_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_main_bg" >
    <include
        android:id="@+id/resetpwd_title_layout"
        layout="@layout/loginsdk_public_title" />
    <LinearLayout
        android:id="@+id/resetpwd_line_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff5d7"
        android:paddingLeft="15dp"
        android:layout_below="@id/resetpwd_title_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/resetpwd_tip_icon"
            android:layout_width="18dip"
            android:layout_height="19dip"
            android:src="@drawable/loginsdk_passport_tip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#ff2e2e"
            android:text="您的账户存在安全风险，请重置密码"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/resetpwd_line_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/resetpwd_line_one"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:textColor="#555555"
            android:text="设置新密码"/>
        <com.wuba.loginsdk.views.LoginAutoClearEditView
            android:id="@+id/reset_resetpwd_password"
            style="@style/RegisterEdit"
            android:hint="请输入新密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"/>
    </LinearLayout>
    <View
        android:id="@+id/separator_resetpwd_one"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_below="@id/resetpwd_line_two"
        />
    <LinearLayout
        android:id="@+id/resetpwd_line_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/separator_resetpwd_one"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:textColor="#555555"
            android:text="确认新密码"/>
        <com.wuba.loginsdk.views.LoginAutoClearEditView
            android:id="@+id/resure_resetpwd_password"
            style="@style/RegisterEdit"
            android:hint="请确认新密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"/>
    </LinearLayout>
    <Button
        android:id="@+id/resetpwd_login_button"
        style="@style/LoginRegButtonStyle"
        android:layout_width="fill_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:layout_below="@id/resetpwd_line_three"
        android:background="@drawable/loginsdk_wb_unlogin_btn_xml"
        android:text="@string/login_text"
        android:textColor="#a0ffffff" />
    <com.wuba.loginsdk.views.base.RequestLoadingView
        android:id="@+id/resetpwd_request_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
</RelativeLayout><!-- From: file:/I:/E/2016523/58sdklogin/WubaLoginSDK/loginsdk/src/main/res/layout/loginsdk_account_login_resetpwd_safeguard.xml -->