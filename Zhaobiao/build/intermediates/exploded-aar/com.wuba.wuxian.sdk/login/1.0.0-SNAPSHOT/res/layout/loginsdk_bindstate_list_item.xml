<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:descendantFocusability = "blocksDescendants"
    android:background="@color/white">

    <com.wuba.loginsdk.views.base.RecycleImageView
        android:id="@+id/bind_img"
        android:layout_marginLeft="15dip"
        android:layout_width="34dip"
        android:layout_height="34dip"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/bind_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dip"
        android:layout_toRightOf="@id/bind_img"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/unbind_btn"
        android:layout_width="65dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:text="@string/login_tounbind"
        android:textColor="#3dc366"
        android:visibility="gone"
        android:textSize="14sp"
        android:focusable="false"
        android:background="@drawable/loginsdk_bindstate_unbind_bg"/>
    <TextView
        android:id="@+id/bind_state"
        android:layout_width="65dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#666666"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginRight="15dip"
        android:text="@string/login_hasbind"
        android:focusable="false"
        android:background="@drawable/loginsdk_bindstate_binded_bg"/>
    <Button
        android:id="@+id/bind_btn"
        android:layout_width="65dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/login_tobind"
        android:textColor="#ff6a22"
        android:textSize="14sp"
        android:layout_marginRight="15dip"
        android:focusable="false"
        android:background="@drawable/loginsdk_bindstate_bind_bg" />
    <View
        android:id="@+id/bindstate_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#dedfe0"
        android:layout_marginLeft="15dip"
        android:layout_alignParentBottom="true"/>
</RelativeLayout><!-- From: file:/I:/E/2016523/58sdklogin/WubaLoginSDK/loginsdk/src/main/res/layout/loginsdk_bindstate_list_item.xml -->