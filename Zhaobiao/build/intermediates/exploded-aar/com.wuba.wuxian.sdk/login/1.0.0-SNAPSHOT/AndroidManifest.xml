<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wuba.loginsdk"
    android:versionCode="1"
    android:versionName="1.0.0-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true" >
        <activity
            android:name="com.wuba.loginsdk.activity.account.BindWXActivity"
            android:configChanges="keyboardHidden|locale"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash" >
            <intent-filter>
                <action android:name="com.wuba.activity.account.ACTION_BIND_ACCOUNT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wuba.loginsdk.activity.account.PhoneRetrievePasswordActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.wuba.loginsdk.activity.account.PhoneBindOrUnbindActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.wuba.loginsdk.activity.account.ResetNickNameActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash" >
        </activity>
        <activity
            android:name="com.wuba.loginsdk.activity.account.CropImageActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash" >
        </activity>

        <service
            android:name="com.wuba.loginsdk.service.UserAccountService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.wuba.service.ACTION_USER_ACCOUNT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.wuba.loginsdk.activity.account.UserAccountFragmentActivity"
            android:configChanges="keyboardHidden|locale"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" >

            <!-- wpt(隐式调用登录),给插件调用 -->
            <intent-filter>
                <action android:name="com.wuab.Intent.ACTION_LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wuba.loginsdk.activity.account.BindStateActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash" />
        <activity
            android:name="com.wuba.loginsdk.activity.account.ThirdLoginActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash" />
        <activity
            android:name="com.wuba.loginsdk.activity.account.PhoneDynamicLoginActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash" />
        <activity
            android:name="com.wuba.loginsdk.activity.account.JumpFunctionActivity"
            android:configChanges="keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wuba.Splash"
            android:windowSoftInputMode="stateUnchanged|adjustResize" />
        <activity
            android:name="com.wuba.loginsdk.wxapi.WXCallbackEntryActivity"
            android:configChanges="keyboardHidden|locale"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Translucent" />
        <activity
            android:name="com.wuba.loginsdk.activity.OfflineAlertActivity"
            android:configChanges="keyboardHidden|locale"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Translucent" />
        <activity android:name="com.wuba.loginsdk.activity.account.AuthLoginActivity" />
        <!-- 对外暴露的数据的Provider有一定的数据泄露风险 -->
        <!--
            <provider
            android:name=".utils.datamanager.LoginPreferenceProvider"
            android:authorities="com.wuba.android.provider.loginparams"
            android:exported="false" />
        -->
        <receiver
            android:name="com.wuba.loginsdk.internal.OfflineAlertReceiver"
            android:exported="false" />
    </application>

</manifest>